<div class="cal-header-mobile">
    <div class="col-xs-9">
        <span class="current-view"></span>
    </div>
    <div class="col-xs-3">
        <div class="btn-group btn-group-justified viewSelector">
            <div class="btn-group" role="group">
                <button class="btn btn-default outer" data-calendar-nav="prev"><i
                        class="fa fa-angle-left fa-lg"></i>

                </button>
            </div>
            <div class="btn-group" role="group">

                <button class="btn btn-default outer" data-calendar-nav="next"><i
                        class="fa fa-angle-right fa-lg"></i></button>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <h5 class="filters-toggler inactive"><span>Filter <i class="fa fa-caret-right"></i></span></h5>
    </div>
    <div class="col-xs-12 filters">


        <div id="classSelectorContainer">
            <div class="separate-selectors text-center">
                <a role="button" class="btn btn-default classSelector event-standard-selector"
                   data-val="event-standard"><i class="fa"></i> Hip Hop</a>

                <a role="button" class="btn btn-default classSelector event-important-selector"
                   data-val="event-important"><i class="fa"></i> Breakdance</a>

                <a role="button" class="btn btn-default classSelector event-warning-selector"
                   data-val="event-warning"><i class="fa"></i> House</a>

                <a role="button" class="btn btn-default classSelector event-info-selector"
                   data-val="event-info"><i class="fa"></i> Locking / Popping</a>

                <a role="button" class="btn btn-default classSelector event-inverse-selector"
                   data-val="event-inverse"><i class="fa"></i> All Styles / Other</a>

                <a role="button" class="btn btn-default classSelector event-success-selector"
                   data-val="event-success"><i class="fa"></i> Workshops & Battles</a>

                <a role="button" class="btn btn-default classSelector event-special-selector"
                   data-val="event-special"><i class="fa"></i> Open Trainings</a>

                <a role="button" class="btn btn-default showall" disabled><i class="fa fa-close"></i> Reset</a>
            </div>
        </div>
        <div class="form-group search">
            <input class="form-control" type="text" title="search" value="" id="searchInput">
            <i class="fa fa-search"></i>
        </div>
    </div>
</div>